<script>
        function logout() {
        fetch('/Account/Logout', { method: 'POST' }) // Call Logout API
            .then(response => {
                if (response.ok) {
                    window.location.href = "/"; // Redirect to Landing Page
                }
            })
            .catch(error => console.error("❌ Logout Error:", error));
    }

        document.addEventListener("DOMContentLoaded", function () {
