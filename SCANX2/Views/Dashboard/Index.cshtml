@{
    ViewData["Title"] = "Dashboard - ScanX";
}

<div class="dashboard-container">
    <!-- ✅ Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-logo">
            <img src="~/images/logo.png" alt="ScanX Logo">
        </div>
        <ul>
            <li><a href="#" onclick="openUploadDialog()">📂 Upload PDF</a></li>
            <li><a href="#">📌 Workspace</a></li>
            <li><a href="#">⚡ Upgrade</a></li>
        </ul>
    </nav>

    <!-- ✅ Main Content -->
    <div class="main-content">
        <h1>Welcome to your Dashboard</h1>
        <p>Manage your PDFs, notes, and workspace efficiently.</p>
        <div id="pdf-display" style="margin-top: 20px;"></div>

    </div>
</div>
<!-- ✅ File Upload Modal (Initially Hidden) -->
<div id="uploadModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeUploadDialog()">&times;</span>
        <h2 class="modal-title">📂 Upload Your PDF</h2>
        <input type="file" id="pdfInput" accept="application/pdf">
        <!-- ✅ File Preview Area -->
        <div id="file-preview"></div>
        <button class="upload-submit" onclick="uploadPDFs()">🚀 Upload</button>
    </div>
</div>
<style>
    /* ✅ Main Layout */
    .dashboard-container {
        display: flex;
        height: 100vh; /* Full-screen height */
        overflow: hidden;
    }
    /* ✅ Modal Styling */
    /* ✅ Modal Styling (Hidden by Default) */
    .modal {
        display: none; /* 🔹 Ensure it's hidden initially */
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background: white;
        padding: 30px;
        border-radius: 12px;
        width: 350px;
        text-align: center;
        box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
        animation: slideIn 0.3s ease-in-out;
        position: relative;
    }

    .close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 24px;
        cursor: pointer;
    }

    .modal-title {
        font-size: 22px;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
    }

    .upload-btn {
        display: inline-block;
        background: #007BFF;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 6px;
        cursor: pointer;
        transition: 0.3s;
    }

        .upload-btn:hover {
            background: #0056b3;
        }
    /* ✅ Upload Button */
    .upload-submit {
        background: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        border-radius: 6px;
        cursor: pointer;
        width: 100%;
        margin-top: 15px;
        transition: 0.3s;
    }

        .upload-submit:hover {
            background: #218838;
        }
    .sidebar-logo img {
        width: 150px; /* Adjust size */
        margin-bottom: 20px;
    }
    /* ✅ Sidebar */
    .sidebar {
        width: 250px;
        background:#ffffff;
        color: white;
        padding: 20px;
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .sidebar ul {
            list-style: none;
            padding: 0;
            width: 100%;
        }

        .sidebar li {
            margin-bottom: 15px;
        }

        .sidebar a {
            text-decoration: none;
            color: white;
            background: #333;
            padding: 12px;
            width: 100%;
            display: block;
            text-align: center;
            border-radius: 5px;
            font-weight: bold;
        }

            .sidebar a:hover {
                background: #444;
            }

    /* ✅ Main Content */
    .main-content {
        flex: 1;
        margin-left: 250px;
        padding: 20px;
    overflow: hidden; /* Prevents scrolling */
        background: #f5f5f5;
        height: 100vh;
    }
</style>
<script>
    // ✅ Open the file upload dialog
    function openUploadDialog() {
        document.getElementById("uploadModal").style.display = "flex";
    }

    // ✅ Close the upload dialog
    function closeUploadDialog() {
        document.getElementById("uploadModal").style.display = "none";
    }

