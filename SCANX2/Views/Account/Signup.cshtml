@{
    ViewData["Title"] = "Sign Up - ScanX";
}

<div class="signup-container">
    <!-- ✅ Glassmorphism Card -->
    <div class="signup-card">
        <h2 class="fw-bold text-center">Create an Account</h2>
        <p class="text-center text-muted">Start using ScanX today!</p>

        <!-- ✅ Sign Up Form -->
        <form>
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" class="form-control" id="fullName" placeholder="Enter your full name">
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" class="form-control" id="email" placeholder="Enter your email">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Create a password">
            </div>

            <button type="submit" class="btn btn-dark btn-lg w-100 mt-3">Sign Up</button>
        </form>

        <!-- ✅ Already have an account? -->
        <p class="text-center mt-3">
            Already have an account? <a href="/Account/Login" class="text-primary">Log in</a>
        </p>
    </div>
</div>

<!-- ✅ CSS Styling -->
<style>
    /* ✅ Centered Container */
    .signup-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
        background: #f4f4f4;
        padding: 20px;
    }

    /* ✅ Glassmorphism Card */
    .signup-card {
        width: 100%;
        max-width: 400px;
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
    }

    /* ✅ Form Fields */
    .form-group {
        margin-bottom: 15px;
    }

