


@{
    ViewData["Title"] = "Login - ScanX";
}

<div class="login-container">
    <!-- ✅ Logo -->
    <img src="~/images/logo.png" alt="ScanX Logo" class="logo mb-3">

    <!-- ✅ Login Form -->
    <h2 class="fw-bold mb-3">Welcome Back</h2>
    <p class="text-muted">Login to continue using ScanX</p>

    <form method="post" asp-controller="Account" asp-action="Login">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email">
        </div>

        <div class="form-group mt-3">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" required placeholder="Enter your password">
        </div>


        <button type="submit" class="btn btn-dark btn-lg w-100 mt-4">Login</button>
    </form>

    <p class="mt-3">Don't have an account? <a href="/Account/Signup" class="text-primary">Sign up</a></p>
</div>

<!-- ✅ Login Page Styles -->
<style>
    /* ✅ Center Content */
    .login-container {
        max-width: 400px;
        margin: auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
        margin-top: 20px;
        height: 80vh;
        overflow: hidden; /* Hides any extra content */
    }

    /* ✅ Logo */
    .logo {
        height: 70px;
    }

    /* ✅ Form Styling */
    .form-group label {
        font-weight: 500;
        text-align: left;
        display: block;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px;
        font-size: 16px;
    }

    /* ✅ Button Styling */
    .btn-dark {
        border-radius: 10px;
        font-size: 18px;
        font-weight: bold;
        padding: 12px;
    }

    
</style>
