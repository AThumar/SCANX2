@{
    ViewData["Title"] = "Login - ScanX";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4">
        <h2 class="text-center fw-bold">Login to ScanX</h2>
        <p class="text-center text-muted">Access your account and continue where you left off.</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.Error
            </div>
        }

        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Email:</label>
                <input type="email" name="email" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Password:</label>
                <input type="password" name="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Log In</button>
        </form>

        <p class="text-center mt-3">Don't have an account? <a href="/Account/Signup">Sign Up</a></p>
    </div>
</div>

<style>
    /* ✅ Keep styling similar to Signup page */
    .container {
        max-width: 500px;
        height: 50vh;
    }

    .card {
        width: 100%;
        border-radius: 30px;
        background: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #000000;
        border: none;
        padding: 10px;
        font-weight: bold;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: forestgreen;
        }
</style>
