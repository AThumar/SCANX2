@{
    ViewData["Title"] = "ScanX Solutions";
}

<!-- ✅ Page Header -->
<div class="container text-center mt-5">
    <h1 class="fw-bold display-4">ScanX Solutions</h1>
    <p class="text-muted lead">Tailored document management and note-taking solutions for every profession and workflow.</p>
</div>

<!-- ✅ Solutions Section -->
<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-6">
            <div class="solution-card shadow-sm p-4 bg-lightblue">
                <h4 class="fw-bold">🎓 For Students & Researchers</h4>
                <ul class="list-unstyled mt-3">
                    <li>✅ Annotate research papers with searchable notes.</li>
                    <li>✅ Create study guides by extracting key points.</li>
                    <li>✅ Collaborate with study groups.</li>
                </ul>
                <a href="#" class="btn btn-primary mt-3">Learn More</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="solution-card shadow-sm p-4 bg-lightgreen">
                <h4 class="fw-bold">💼 For Professionals</h4>
                <ul class="list-unstyled mt-3">
                    <li>✅ Keep client documents organized.</li>
                    <li>✅ Annotate contracts and agreements.</li>
                    <li>✅ Track document changes.</li>
                </ul>
                <a href="#" class="btn btn-primary mt-3">Learn More</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="solution-card shadow-sm p-4 bg-lightyellow">
                <h4 class="fw-bold">⚖️ For Legal Teams</h4>
                <ul class="list-unstyled mt-3">
                    <li>✅ Create case-specific document collections.</li>
                    <li>✅ Highlight legal precedents and statutes.</li>
                    <li>✅ Secure documents with enterprise-grade security.</li>
                </ul>
                <a href="#" class="btn btn-primary mt-3">Learn More</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="solution-card shadow-sm p-4 bg-lightpink">
                <h4 class="fw-bold">🏥 For Healthcare Professionals</h4>
                <ul class="list-unstyled mt-3">
                    <li>✅ Organize medical journals by specialty.</li>
                    <li>✅ Take secure notes on patient cases.</li>
                    <li>✅ Maintain HIPAA-compliant security.</li>
                </ul>
                <a href="#" class="btn btn-primary mt-3">Learn More</a>
            </div>
        </div>
    </div>
</div>

<!-- ✅ How ScanX Works -->
<div class="container text-center mt-5">
    <h2 class="fw-bold">How ScanX Works</h2>
    <div class="row mt-4 g-3">
        <div class="col-md-3">
            <div class="step-box">
                <span class="step-number">1</span>
                <p class="mt-2">Upload PDFs</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="step-box">
                <span class="step-number">2</span>
                <p class="mt-2">Organize</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="step-box">
                <span class="step-number">3</span>
                <p class="mt-2">Annotate</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="step-box">
                <span class="step-number">4</span>
                <p class="mt-2">Collaborate</p>
            </div>
        </div>
    </div>
</div>

<!-- ✅ Testimonials -->
<div class="container mt-5">
    <h2 class="text-center fw-bold">What Our Users Say</h2>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="testimonial shadow-sm p-4">
                <blockquote class="fst-italic">"ScanX has completely transformed how our research team manages scientific papers!"</blockquote>
                <p class="fw-bold mt-2">- Dr. Sarah Chen</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial shadow-sm p-4">
                <blockquote class="fst-italic">"As a law student, I juggle hundreds of case files. ScanX keeps me organized!"</blockquote>
                <p class="fw-bold mt-2">- Marcus Johnson</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="testimonial shadow-sm p-4">
                <blockquote class="fst-italic">"Our accounting team handles thousands of documents. ScanX streamlined our workflow tremendously."</blockquote>
                <p class="fw-bold mt-2">- Priya Patel</p>
            </div>
        </div>
    </div>
</div>

<!-- ✅ CTA -->
<div class="container text-center mt-5">
    <h2 class="fw-bold">Ready to Transform Your Document Workflow?</h2>
    <p class="lead">Join thousands of professionals who use ScanX.</p>
    <a href="#" class="btn btn-dark btn-lg px-4">Start Your Free Trial</a>
</div>

<!-- ✅ Styles -->
<style>
    .solution-card {
        border-radius: 8px;
        transition: transform 0.3s ease-in-out;
    }

        .solution-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
        }

    .bg-lightblue {
        background-color: #E3F2FD;
    }

    .bg-lightgreen {
        background-color: #E8F5E9;
    }

    .bg-lightyellow {
        background-color: #FFF9C4;
    }

    .bg-lightpink {
        background-color: #FCE4EC;
    }

    .step-box {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .step-number {
        font-size: 28px;
        font-weight: bold;
        color: #000000;
        display: block;
    }

    .testimonial {
        border-left: 4px solid #000000;
        background: #f8f9fa;
        border-radius: 8px;
    }

        .testimonial blockquote {
            font-size: 16px;
            color: #555;
        }
</style>
