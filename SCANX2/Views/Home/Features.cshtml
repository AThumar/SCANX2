@{
    ViewData["Title"] = "ScanX Features";
}

<!-- ✅ Features Section -->
<section class="features-section text-center">
    <h2 class="fw-bold">ScanX Features</h2>
    <p class="text-muted">
        Transform how you work with PDFs. ScanX combines powerful document management with intelligent note-taking.
    </p>

    <div class="row">
        <!-- ✅ Feature Card -->
        <div class="col-md-4">
            <div class="feature-card">
                <h4>📂 PDF Management</h4>
                <p>Upload, organize, and access your PDFs in a single location with powerful indexing.</p>
                <a href="#">Access your documents anywhere.</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <h4>📝 Smart Notes</h4>
                <p>Take detailed notes, highlight, and add comments directly on your PDFs.</p>
                <a href="#">Notes sync automatically across devices.</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <h4>🔍 Advanced Search</h4>
                <p>Find any document instantly with our search functionality, filtering by date, content, and tags.</p>
                <a href="#">Save hours finding documents.</a>
            </div>
        </div>
    </div>
</section>

<!-- ✅ Seamless PDF Experience -->
<section class="pdf-experience text-center mt-5">
    <h3>Seamless PDF Experience</h3>
    <p class="text-muted">ScanX reimagines how you work with PDFs with drag-and-drop uploads, smart folders, and sharing.</p>

    <ul class="text-start mx-auto" style="max-width: 600px;">
        <li>✅ Upload multiple PDFs with drag and drop</li>
        <li>✅ Organize documents with smart folders</li>
        <li>✅ Access your library across all devices</li>
        <li>✅ Share documents with customizable permissions</li>
    </ul>
</section>

<!-- ✅ Call-to-Action (CTA) -->
<section class="text-center mt-5">
    <h3>Ready to Transform Your Document Workflow?</h3>
    <p class="text-muted">Join thousands of professionals using ScanX.</p>
    <a class="btn btn-dark btn-lg" href="#">Get Started for Free</a>
    <a class="btn btn-light btn-lg" href="#">See Pricing Plans</a>
</section>



