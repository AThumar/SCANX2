        }

    .feature-card {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        margin-top: 15px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
    }

        .feature-card h4 {
            font-size: 20px;
